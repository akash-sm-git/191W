<body>
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
        <h5 class="my-0 mr-md-auto font-weight-normal">Book Genere</h5>
        <nav class="my-0 ">
          <a class="p-2 text-dark" href="#">Shelf</a>
          <a class="p-2 text-dark" href="/view_p_create">Groups</a>
          <a class="p-2 text-dark" href="#">Bookmarks</a>
          <a class="p-2 text-dark" href="#">Insights</a>
        </nav>
      </div>

<h1 class="card-title" style="padding-left: 500px;" ><i>Groups Created By You</i> <small class="text-muted"></small></h1>


<div class="container" style="padding-top: 80px;">

    <div class="card-deck mb-3 text-center">
      <% var c = 0 %>
        <% items.forEach(function(image) { %>

            <%  if ( image.createdby == email ) { %>  
         
    <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
  
                <div class="card-body" >
                    <h1 class="card-title"><i><%= image.name %></i> <small class="text-muted"></small></h1>

          
                    <img src="data:image/<%=image.img.contentType%>;base64, 
                     <%=image.img.data.toString('base64')%>" class="rounded" width="70" height="70">
                     <ul class="list-unstyled mt-3 mb-4">
                        <li class="text-secondary"><%= image.count %> members & still counting</li>
                        <p><%=  image.desc %></p>
                      </ul>
                      <button type="button" class="btn btn-lg btn-block btn-outline-warning">Join</button>
  
                
            </div> 
        </div> 
        </div>
        <% }  %> 

  
        <% }) %> 
    </div> 
    </div>
</body>
</html>