  <body class="bg-light">
    <%- include('partials/nav.ejs') %>
    <%  if ( alert=="alert" ) { %>  

      <div class="alert alert-warning" role="alert">
        <div style="padding-left: 500px;">
        <%= msg %>

      </div>
      </div>
    
      <% }  %> 

    <div class="container" style="padding-top: 50px;padding-left: 250px;">
  <div class="py-2 text-center">
     
  </div>
    <div class="col-md-8 order-md-1">
      <form  class="validate" action="/edit_profile"   method="POST" autocomplete="off" >   
  




          <div class="mb-3">
            <label for="firstName">Name</label>
            <h4><%= name %></h4>
            
          </div>
      
        


        <div class="mb-3">
          <label for="email">Email <span class="text-muted"></span></label>
          
          <h4><%= email %></h4>
          
          
        </div>

        <div class="mb-3">
          <label for="password">Current Password</label>
          <%  if ( loginmode == "email" ) { %>  

          <input type="password" name="current" class="form-control" id="current" placeholder="********" required>
          <% }  %> 
          <%  if ( loginmode == "google" ) { %>  
            <h4>********</h4>

         
            <% }  %> 
  

        </div>



        <div class="mb-3">
          
          <label for="password">Password</label>
          <%  if ( loginmode == "email" ) { %>  
          <input type="password" name="password" class="form-control" id="password" placeholder="********" required>
          <% }  %> 
          <%  if ( loginmode == "google" ) { %>  
            <h4>********</h4>

         
            <% }  %> 
  
        </div>
        <div class="mb-3">

          <label for="password">Confirm Password</label>
          <%  if ( loginmode == "email" ) { %>  
          <input type="password" name="change" class="form-control" id="change" placeholder="********" required>
      
          <% }  %> 
          <%  if ( loginmode == "google" ) { %>  
            <h4>********</h4>

         
            <% }  %> 
  
      
        </div>

        
        <hr class="mb-4">
        <%  if ( loginmode == "email" ) { %>  
        <button class="btn btn-outline-warning btn-lg btn-block" type="submit">Update</button>
        <% }  %> 

      </form>
    </div>
  </div>

  <footer class="my-5 pt-5 text-muted text-center text-small">
    <p class="mb-1">&copy; 2014-2020 Company Name</p>
    <ul class="list-inline">
