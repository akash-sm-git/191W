  <div class="container-lg mb-5 ">
    <% targetarray.forEach(function(image) { %>

    <div class="row mt-5">
      <div class="col-md-4 text-center">
        <img src="data:image/<%=image.img.contentType%>;base64, 
                <%=image.img.data.toString('base64')%>" height="200" weight="200">
      </div>
      <div class="col-md-4">
