        <h2 class="text-left"><%=image.bname %></h2>

      </div>
      <div class="col-md-4">
        
      </div>
     
      

    </div>


        <% for(var i=0; i < image.targetinfo.length; i++) { %>
          <form   action="/targetform" method="POST" >

        <div class="row mt-4">
          <div class="col-md-6 border border-dark rounded clearfix mt-4">
            <div class="row mt-2">
              <div class="col-md-6">
                  <h6 class="text-left" id="no_days_1">Pageno:<%= image.targetinfo[i].Pagedata %></h6>
                  </div>
                  <div class="col-md-6">

                  <h6 class="text-center" id="no_days_1">Days:<%= image.targetinfo[i].days %></h6>

              </div>
              
            </div>
            <div class="col-md-6">
              <h6 class="text-left">Summary:</h6>
              <p class="text-left" id="summary"><%=image.targetinfo[i].targetdata %></p>
            </div>
          </div>
        </div>

      
        

      </form>

