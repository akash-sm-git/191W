<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Jekyll v4.1.1">
    <title>Book Genre</title>

    <link rel="canonical" href="https://getbootstrap.com/navigation/">

    <!-- Bootstrap core CSS -->
<link href="/css/bootstrap.min.css" rel="stylesheet">

    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>
    <!-- Custom styles for this template -->
    <link href="/css/navigation.css" rel="stylesheet">
  </head>
  <body>
      <%- include('partials/nav.ejs') %>

<div class="header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-0"> Hello,<%= name %></h1>
  <p class="lead">You are not part of any group yet!</p>
  <p class="lead"><i>Signup to read a book"</i></p>
  <p class="lead"><a style="color: F4A460" href="/create_group">Click here to create  a group</a>
  </p>
</div>
<div class="container">

  <div class="card-deck mb-3 text-center">
<% var c = 0 %>
      <% items.forEach(function(image) { %>
        <%  if ( image.createdby != email ) { %>  
<%  if ( mygroups.length != 0 ) { %>  
  <div class="col-md-4">


            <div class="card mb-4 shadow-sm">


              <div class="card-body">

                  <h1 class="card-title"><i><%= image.name %></i> <small class="text-muted"></small></h1>
        
                  <img src="data:image/<%=image.img.contentType%>;base64, 
                   <%=image.img.data.toString('base64')%>" class="rounded" width="70" height="70">
                   <ul class="list-unstyled mt-3 mb-4">
                    <li class="text-secondary"><%= image.users.length %> members & still counting</li>
                    <p><%=  image.desc %></p>
                    </ul>
                    <form action="/home" method="POST">
                      <input type='hidden' id= 'id' name='id' value= <%= image._id %> />
                      <%  if ( mygroups.includes(image._id) ) { %>  


                      <button  class="btn btn-lg btn-block btn-outline-warning">View</button>
                      <% } else{ %>
                        <button  class="btn btn-lg btn-block btn-outline-warning">Join</button>
                        <% } %>




                    </form>
                    <p></p>

              
          </div> 
      </div> 
      </div>

      <% }  %> 
      <%  if ( mygroups.length == 0 ) { %>  

        <div class="col-md-4">
         
  
              <div class="card mb-4 shadow-sm">
  
  
                <div class="card-body">
  
                    <h1 class="card-title"><i><%= image.name %></i> <small class="text-muted"></small></h1>
          
                    <img src="data:image/<%=image.img.contentType%>;base64, 
                     <%=image.img.data.toString('base64')%>" class="rounded" width="70" height="70">
                     <ul class="list-unstyled mt-3 mb-4">
                        <li class="text-secondary"><%= image.count %> members & still counting</li>
                        <p><%=  image.desc %></p>
                      </ul>
                      <form action="/home" method="POST">
                        <input type='hidden' id= 'id' name='id' value= <%= image._id %> />
  
  
                        <button  class="btn btn-lg btn-block btn-outline-warning">Join</button>
  
                      </form>
                      <p></p>
  
                
            </div> 
        </div> 
        </div>


      <% }  %> 

      <% }  %> 



      <% }) %> 
  </div> 
  </div>

 

</div>
</body>


</html>
