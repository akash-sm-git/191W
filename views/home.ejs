  <body>
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
  <h5 class="my-0 mr-md-auto font-weight-normal">Book Genere</h5>
  <nav class="my-0 ">
    <a class="p-2 text-dark" href="#">Shelf</a>
    <a class="p-2 text-dark" href="#">Profile</a>

    <a class="p-2 text-dark" href="/view_p_create">Groups</a>
    <a class="p-2 text-dark" href="#">Bookmarks</a>
    <a class="p-2 text-dark" href="#">Insights</a>
  </nav>
</div>
<div class="header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-0"> Hello,<%= name %></h1>
  <p class="lead">You are not part of any group yet!</p>
  <p class="lead"><i>Signup to read a book"</i></p>
  <p class="lead"><a style="color: F4A460" href="/create_group">Click here to create  a group</a>
  </p>
</div>

<div class="container">

  <div class="card-deck mb-3 text-center">

<% var c = 0 %>
      <% items.forEach(function(image) { %>
       
  <div class="col-md-4">
      <div class="card mb-4 shadow-sm">

              <div class="card-body">

                  <h1 class="card-title"><i><%= image.name %></i> <small class="text-muted"></small></h1>
        
                  <img src="data:image/<%=image.img.contentType%>;base64, 
                   <%=image.img.data.toString('base64')%>" class="rounded" width="70" height="70">
                   <ul class="list-unstyled mt-3 mb-4">
                      <li class="text-secondary"><%= image.count %> members & still counting</li>
                      <p><%=  image.desc %></p>
                    </ul>
                    <form action="/home" method="POST">
                      <input type='hidden' id= 'id' name='id' value= <%= image._id %> />


                      <button  class="btn btn-lg btn-block btn-outline-warning">Join</button>

                    </form>
                    <p></p>

              
          </div> 
      </div> 
      </div>

      <% }) %> 
  </div> 
  </div>

 

  <footer class="pt-4 my-md-5 pt-md-5 border-top">
    <div class="row">
      <div class="col-12 col-md">
        
        <small class="d-block mb-3 text-muted">&copy; 2014-2020</small>
      </div>
