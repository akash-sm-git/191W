      <body class="bg-light">   
        

        <%- include('partials/nav.ejs') %>


        <% items.forEach(function(image) { %>
          <%  if ( reqarray.includes(image._id) ) { %>  

  <div class="container-lg mt-5 " >
    <div class="text-center container-lg ml-6">

            <div class=" col-md-12 border border-dark rounded-lg clearfix" style="padding: 20px;">
              <div class="row">

              <div class="col-md-3">
                <img src="data:image/<%=image.img.contentType%>;base64, 
                <%=image.img.data.toString('base64')%>" >

              </div>
              <div class="col-md-9 " >

                <div class="col-md-6">
                  <h3 class="text-left" id="user_1"><%= image.gname %></h3>
                  <h5 class="text-left" id="date_1"> <%= image.bname %></h3>
                </div>
              <div class="text-center ">

                <form  action="\accept" method="POST" >

                <div class="col-md-6 mt-4">
                  <input type='hidden' id= 'email' name='email' value= <%= email %> />
                  <input type='hidden' id= 'groupid' name='groupid' value= <%= image._id %> />

                  <button class="btn btn-outline-warning btn-lg btn-block" type="submit">Accept</button>

                </div>
                </form>
                <form  action="\reject" method="POST" >
                  <input type='hidden' id= 'email' name='email' value= <%= email %> />
                  <input type='hidden' id= 'groupid' name='groupid' value= <%= image._id %> />


                  <div class="col-md-6 mt-4">
                    <button class="btn btn-outline-warning btn-lg btn-block" type="submit">Reject</button>
  
                  </div>
                  </form>

              </div>
            </div>
          </div>

          </div>
        </div>


          </div>

          <% } %>

          <% }) %>






